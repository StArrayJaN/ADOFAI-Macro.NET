<Window x:Class="ADOFAI_Macro.Source.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- 0: 菜单栏 -->
            <RowDefinition Height="*" />
            <!-- 1: 内容区 -->
            <RowDefinition Height="Auto" />
            <!-- 2: 输入区 -->
            <RowDefinition Height="Auto" />
            <!-- 3: 底部按钮 -->
            <RowDefinition Height="Auto" />
            <!-- 4: 异常显示 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- 菜单栏 -->
        <MenuBar Grid.Row="0" Grid.ColumnSpan="2">
            <MenuBarItem x:Uid="MainWindow_MenuBarFileItem" Title="文件">
                <MenuFlyoutItem x:Uid="MainWindow_OpenFileMenuFlyoutItem"
                                Click="OpenFileItem_Click"
                                Text="打开..." />
                <MenuFlyoutItem x:Uid="MainWindow_OpenLastFileMenuFlyoutItem"
                                Click="OpenLastFileItem_Click"
                                Name="OpenLast"
                                Text="打开上次..." />
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:Uid="MainWindow_OpenExitMenuFlyoutItem"
                                Click="ExitMenuItem_Click"
                                Text="退出" />
            </MenuBarItem>
        </MenuBar>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Margin="12,5"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="ContentTextBox"
                     AcceptsReturn="True"
                     BorderThickness="0"
                     FontFamily="Consolas"
                     IsReadOnly="True"
                     TextWrapping="Wrap" />
        </ScrollViewer>

        <TextBox Name="Keys"
                 x:Uid="MainWindow_EnterKeysTextBox"
                 Grid.Row="2"
                 Grid.Column="0"
                 Margin="12,5"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 PlaceholderText="请输入键位..." />

        <CheckBox Name="CheckBox"
                  x:Uid="MainWindow_EnableConsoleOutputCheckBox"
                  Grid.Row="2"
                  Grid.Column="1"
                  Margin="12"
                  Content="启用控制台输出" />

        <!-- 底部按钮 -->
        <Button x:Name="StartButton"
                x:Uid="MainWindow_RunMacroButton"
                Grid.Row="2"
                Grid.Column="2"
                Margin="12,12"
                HorizontalAlignment="Right"
                Click="Start_Click"
                Content="运行"
                CornerRadius="4"
                IsEnabled="False"
                Style="{StaticResource AccentButtonStyle}" />
        <Grid Name="ExceptionGrid"
              Grid.Row="4"
              Grid.ColumnSpan="2"
              Margin="12"
              Background="#10FF0000"
              Visibility="Collapsed">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="ExceptionTextBox"
                         Padding="5"
                         AcceptsReturn="True"
                         Background="Transparent"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="Red"
                         IsReadOnly="True"
                         TextWrapping="Wrap" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>